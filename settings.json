{
	// #region Basic Settings
	"editor.formatOnSave": true,
    "files.autoSave": "afterDelay",

    "editor.defaultFormatter": "ms-dotnettools.csdevkit",
    "[csharp]": { "editor.defaultFormatter": "ms-dotnettools.csharp" },

	"editor.language.colorizedBracketPairs": [["(", ")"], ["[", "]"], ["{", "}"]],

	"workbench.settings.showAISearchToggle": false,
    "chat.disableAIFeatures": true,

	"editor.wordWrap": "wordWrapColumn",
	"editor.wordWrapColumn": 999,
	"editor.wrapOnEscapedLineFeeds": true,
	
    "git.enableSmartCommit": true,
    "git.confirmSync": false,

    "editor.foldingImportsByDefault": true,

	"editor.minimap.showSlider": "always",
	"editor.minimap.markSectionHeaderRegex": "#region (?<label>[^-]*)",
	"TransparentMinimap.transparencyLevel": "22",

	"editor.rulers": [{ "column": 120, "color": "#404040" }],
	"editor.codeLens": false,

	"chat.commandCenter.enabled": false,
	"workbench.editor.splitInGroupLayout": "vertical",

	"todo-tree.general.tags": ["todo", "temp"],
	"todo-tree.highlights.defaultHighlight": { "background": "#0f6600"},

	// Hot reload in editor doesn't work, use dotnet watch
	//"csharp.experimental.debug.hotReload": true,
	"csharp.debug.hotReloadOnSave": false,

	// #endregion
	
	// #region Inlay Hints
	"editor.inlayHints.fontFamily": "Koruri",
	"editor.inlayHints.fontSize": 12,
	"csharp.inlayHints.enableInlayHintsForImplicitVariableTypes": true,
	"csharp.inlayHints.enableInlayHintsForLambdaParameterTypes": true,
	"csharp.inlayHints.enableInlayHintsForTypes": true,
	"dotnet.inlayHints.enableInlayHintsForIndexerParameters": true,
	"dotnet.inlayHints.enableInlayHintsForLiteralParameters": true,
	"dotnet.inlayHints.enableInlayHintsForObjectCreationParameters": true,
	"dotnet.inlayHints.enableInlayHintsForOtherParameters": true,
	"dotnet.inlayHints.enableInlayHintsForParameters": true,
	"dotnet.inlayHints.suppressInlayHintsForParametersThatDifferOnlyBySuffix": true,
	"dotnet.inlayHints.suppressInlayHintsForParametersThatMatchArgumentName": true,
	"dotnet.inlayHints.suppressInlayHintsForParametersThatMatchMethodIntent": true,
	"editor.inlayHints.maximumLength": 0,
	// #endregion

	// #region Custom colors
	// Intended base theme is Dark Modern
	"workbench.colorCustomizations": {
		"focusBorder": "#8117c3",
		"minimap.background": "#00000022",
		"panelTitle.activeBorder": "#b845ff",
		"list.activeSelectionBackground": "#631494",
		"settings.modifiedItemIndicator": "#4157ff92",
		"menu.selectionBackground": "#8117c3",
		"activityBar.activeBorder": "#b845ff",
		"terminal.tab.activeBorder": "#b845ff",
		"panelTitleBadge.background": "#8117c3",
		"activityBarBadge.background": "#8117c3",
		"progressBar.background": "#8117c3",
		"charts.lines": "#8117c3",
		"editorInfo.foreground": "#b845ff",
		"editorLink.activeForeground": "#8117c3",
		"inputOption.activeBorder": "#8117c3",
		"inputValidation.infoBorder": "#8117c3",
		"list.highlightForeground": "#cb91ef",
		"statusBar.debuggingBackground": "#8117c3",

		"tab.activeBorderTop": "#b845ff",
		"tab.unfocusedActiveBorderTop": "#583d60",

		"button.background": "#8117c3",
		"button.hoverBackground": "#a020f0",

		"textLink.activeForeground": "#b845ff",
		"textLink.foreground": "#cf82ff",

		"peekView.border": "#8a539b",
		"peekViewEditor.background": "#191919",
		"peekViewEditor.matchHighlightBackground": "#6a1b9bd7",
		"peekViewResult.background": "#191919",
		"peekViewResult.matchHighlightBackground": "#6a1b9bd7",
		"peekViewResult.selectionBackground": "#8117c3",

		"editor.background": "#191919",

		"editorUnnecessaryCode.border": "#c3c3c3",

		"editor.selectionBackground": "#8117c3",
		"editor.selectionHighlightBackground": "#6a1b9bd7",
		"editor.findMatchBackground": "#b845ff",
		"editor.findMatchHighlightBackground": "#b845ff8e"
	},

    "editor.tokenColorCustomizations": { "textMateRules": [
        {
            "scope": [
				"entity.name.function",
				"support.function",
				"support.constant.handlebars",
				"source.powershell variable.other.member",
				"entity.name.operator.custom-literal"
			],
			"settings": {
				"foreground": "#32bb99"
			}
        },
        {
			"scope": [
				"support.class",
				"support.type",
				"entity.name.type",
				"entity.name.namespace",
				"entity.other.attribute",
				"entity.name.scope-resolution",
				"entity.name.class",
				"storage.type.numeric.go",
				"storage.type.byte.go",
				"storage.type.boolean.go",
				"storage.type.string.go",
				"storage.type.uintptr.go",
				"storage.type.error.go",
				"storage.type.rune.go",
				"storage.type.cs",
				"storage.type.generic.cs",
				"storage.type.modifier.cs",
				"storage.type.variable.cs",
				"storage.type.annotation.java",
				"storage.type.generic.java",
				"storage.type.java",
				"storage.type.object.array.java",
				"storage.type.primitive.array.java",
				"storage.type.primitive.java",
				"storage.type.token.java",
				"storage.type.groovy",
				"storage.type.annotation.groovy",
				"storage.type.parameters.groovy",
				"storage.type.generic.groovy",
				"storage.type.object.array.groovy",
				"storage.type.primitive.array.groovy",
				"storage.type.primitive.groovy",
				"entity.name.tag"
			],
			"settings": {
				"foreground": "#be8ff9"
			}
		},
        {
			"scope": [
				"keyword.control",
				"source.cpp keyword.operator.new",
				"keyword.operator.delete",
				"keyword.other.using",
				"keyword.other.directive.using",
				"keyword.other.operator",
				"entity.name.operator"
			],
			"settings": {
				"foreground": "#8189eb"
			}
		},
        {
			"scope": "keyword",
			"settings": {
				"foreground": "#6798ff"
			}
		},
        {
			"scope": [
				"variable",
				"meta.definition.variable.name",
				"support.variable",
				"entity.name.variable",
				"constant.other.placeholder",
				"entity.other.attribute-name"
			],
			"settings": {
				"foreground": "#66c8cc"
			}
		},
        {
			"scope": [
				"string",
				"meta.embedded.assembly"
			],
			"settings": {
				"foreground": "#e9aee4"
			}
		},
        {
			"scope": [
				"constant.numeric",
				"variable.other.enummember",
				"keyword.operator.plus.exponent",
				"keyword.operator.minus.exponent"
			],
			"settings": {
				"foreground": "#4ab0e7"
			}
		},
        {
			"scope": "comment", 
			"settings": {
				"foreground": "#76b668"
			}
		},
		{
			"scope": "variable.language",
			"settings": {
				"fontStyle": "italic"
			}
		}
	]},

	"editor.semanticTokenColorCustomizations": {
		"rules": {
    		"parameter": "#dac9ff",
    		"property": "#66c8cc",
			"field": "#b5c0ff",
    		"variable": "#ed94bb",
			"constant": "#4ab0e7",
			"preprocessorText": "#da86d1"
  		}
	}
	// #endregion
}